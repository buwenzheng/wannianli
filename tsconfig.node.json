{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/shared/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@main": ["src/main"],
      "@main/*": ["src/main/*"],
      "@preload": ["src/preload"],
      "@preload/*": ["src/preload/*"],
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"],
      "@resources": ["resources"],
      "@resources/*": ["resources/*"]
    }
  }
}
